# Используйте образ с Node.js
FROM node:14

# Создайте рабочий каталог внутри контейнера
WORKDIR /usr/src/app

# Копируйте package.json и package-lock.json для установки зависимостей
COPY package*.json ./

# Установите зависимости
RUN npm install

# Скопируйте все файлы в контейнер
COPY . .

# Откройте порт 3000 (или любой другой, если вы используете другой порт)
EXPOSE 3000

# Запустите приложение при старте контейнера
CMD ["npm", "run", "start"]